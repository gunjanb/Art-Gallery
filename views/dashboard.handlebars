<div class="card-style">
     {{#each arts as |art|}}
          <article>
               <a href=" /dashboard/{{art.id}}"><img src="{{art.img_url}}" class="card-img-top"
                         alt="{{art.art_name}}"></a>
               <h3>{{art.art_name}}</h3>
               <p>Artist: {{art.artist_name}}</p>
               <p>Price: {{art.price}}</p>
               <a href="/dashboard/{{art.id}}" class="btn btn-primary update">Update</a>
               <a href="/api/arts/{{art.id}}" class="btn btn-primary delete">Delete</a>
          </article>
     {{/each}}
</div>
<main class="container d-flex align-items-center login-signup-container">
    <div class="row">
        <div class="col sm-12 md-6" id="login">
            <h2>Login</h2>
            <form class="login-form">
                <div class="row mb-3">
                    <label for="email-login" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email-login" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="password-login" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password-login" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
        <div class="col sm-12 md-6" id="signup">
            <h2>Signup</h2>
            <form class="signup-form">
                <div class="row mb-3">
                    <label for="username-signup" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="username" class="form-control" id="username-signup" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="email-signup" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email-signup" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="password-signup" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password-signup" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>
</main>

<script src="/js/login.js"></script>

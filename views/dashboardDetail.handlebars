<div class="card-style-detail">
     <article>
          <p><img src="{{det.img_url}}" class="card-img-top" alt="{{det.art_name}}"></p>
          <form>
               <div class="row">
                    <div class="col">
                         <label for="title">Title: </label>
                    </div>
                    <div class="col">
                         <input class="form-control" type="text" id="title" placeholder="{{det.art_name}}">
                    </div>
               </div>
               <div class="row">
                    <div class="col">
                         <label for="technique">Technique: </label>
                    </div>
                    <div class="col">
                         <input class="form-control" type="text" id="technique" placeholder="{{det.technique}}">
                    </div>
               </div>
               <div class="row">
                    <div class="col">
                         <label for="dimension">Dimensions: </label>
                    </div>
                    <div class="col">
                         <input class="form-control" type="text" id="dimension" placeholder="{{det.dimension}}">
                    </div>
               </div>
               <div class="row">
                    <div class="col">
                         <label for="price">Price: </label>
                    </div>
                    <div class="col">
                         <input class="form-control" type="text" id="price" placeholder="{{det.price}}">
                    </div>
               </div>
               <div class="row">
                    <div class="col">
                         <label for="details">Other Details: </label>
                    </div>
                    <div class="col">
                         <input class="form-control" type="text" id="details" placeholder="{{det.other_details}}">
                    </div>
               </div>
          </form>

          <p><a href="/dashboard{{art.id}}" class="btn btn-primary update">Update</a></p>
     </article>
</div>
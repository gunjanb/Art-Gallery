<main class="container d-flex justify-content-center login-signup-container">
  <div class="row">
    <div class="col sm-12 md-6" id="signup">
      <h2>Signup</h2>
      <form class="signup-form">
        <div class="row mb-3">
          <label for="username-signup" name="username" class="col-sm-2 col-form-label">Username</label>
          <div class="col-sm-10">
            <input type="username" class="form-control" id="username-signup" />
          </div>
        </div>
        <div class="row mb-3">
          <label for="email-signup" name="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email-signup" />
          </div>
        </div>
        <div class="row mb-3">
          <label for="password-signup" name="password" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password-signup" />
          </div>
        </div>
        <button type="submit" id="submitBtn" class="btn btn-primary">
          Sign Up
        </button>
      </form>
    </div>
  </div>
</main>

<script src="/js/signup.js"></script>